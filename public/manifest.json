{
  "name": "NewsEz",
  "description": "뉴스 이해에 도움을 주기 위한 어플리케이션",
  "manifest_version": 3,
  "version": "1.0.0",
  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "https://news.kbs.co.kr/news/pc/view/view.do?ncd=7810836",
    "https://n.news.naver.com/*",
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
        "matches": ["https://news.kbs.co.kr/news/pc/view/view.do?ncd=7810836"], 
        "js": ["Content.js"]
    }
]
}
